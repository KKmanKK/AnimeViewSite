// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model anime {
  id           Int      @id @default(autoincrement())
  name         String
  description  String?
  source       source[]
  season       String
  release      DateTime
  duration     String
  img          String
  frames       String
  trailer      String
  video        String
  viewUser     user?    @relation("ViewAnime", fields: [viewUserId], references: [id])
  viewUserId   Int?
  viewedUser   user?    @relation("ViewedAnime", fields: [viewedUserId], references: [id])
  viewedUserId Int
  ganre        genre[]
}

model genre {
  id          Int     @id @default(autoincrement())
  name        String
  description String?
  anime       anime   @relation(fields: [animeId], references: [id])
  animeId     Int
}

model source {
  id      Int    @id @default(autoincrement())
  name    String
  anime   anime  @relation(fields: [animeId], references: [id])
  animeId Int
}

model user {
  id          Int     @id @default(autoincrement())
  name        String
  lastName    String
  country     String
  email       String
  password    String
  viewAnime   anime[] @relation("ViewAnime")
  viewedAnime anime[] @relation("ViewedAnime")
}
